---
layout: null
sitemap:
  lastmod: 2022-12-24
  exclude: 'yes'
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="assets/css/sitemap.xsl"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for page in site.html_pages %}
    {% unless page.sitemap.exclude == "yes" or page.name == "/feed.xml" or page.name == "robots.txt" or page.name == "redirect.html" or page.slug == "game-programming" or page.slug == "web-programming"%}
    <url>
        {% if page.slug %}
            <loc>{{ site.url }}{{ site.baseurl }}/{{ page.slug | remove: "index.html" }}/</loc>
        {% else %}
            <loc>{{ site.url }}{{ site.baseurl }}/</loc>
        {% endif %}
        {% if page.sitemap.lastmod %}
            <lastmod>{{ page.sitemap.lastmod | date: "%Y-%m-%d" }}</lastmod>
        {% elsif page.date %}
            <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
        {% else %}
            <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        {% endif %}
        {% if page.sitemap.changefreq %}
            <changefreq>{{ page.sitemap.changefreq }}</changefreq>
        {% else %}
            <changefreq>weekly</changefreq>
        {% endif %}
        {% if page.sitemap.priority %}
            <priority>{{ page.sitemap.priority }}</priority>
        {% else %}
            <priority>0.5</priority>
        {% endif %}
    </url>
    {% endunless %}
{% endfor %}
</urlset>
